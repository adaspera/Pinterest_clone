<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/Lab1dbSimple"/>
                <property name="username" value="postgres"/>
                <property name="password" value="admin"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
<!--        <mapper resource="adaspera/lab1/Mybatis/CommentMapper.xml"/>-->
<!--        <mapper resource="adaspera/lab1/Mybatis/PostMapper.xml"/>-->
<!--        <mapper resource="adaspera/lab1/Mybatis/TopicMapper.xml"/>-->
<!--        <mapper resource="adaspera/lab1/Mybatis/PostTopicMapper.xml"/>-->
        <mapper resource="TopicSqlMapper.xml"/>
    </mappers>
</configuration>